<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="coin"
            type="com.lampa.financulator.model.Coin" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_purchase"
            app:coin="@{coin}" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <ImageView
                setImageUrl="@{coin.image}"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="2"
                android:contentDescription="@drawable/ic_baseline_add_circle_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="@{@string/currentPrice(coin.symbol, coin.currentPrice.USD, coin.currentPrice.BTC)}" />

            <ImageView
                setImageUrl="@{coin.image}"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="2"
                android:contentDescription="@drawable/ic_baseline_add_circle_24" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gradient_center"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            style="@style/Financulator.EditText"
            android:id="@+id/description"
            android:hint="@string/description"
            android:inputType="text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view"/>

        <Spinner
            android:id="@+id/spinner"
            style="@style/Financulator.EditText"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/description" />

        <EditText
            style="@style/Financulator.EditText"
            android:id="@+id/amount"
            android:hint="@string/quantity"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <EditText
            android:id="@+id/price"
            style="@style/Financulator.EditText"
            android:hint="@string/price"
            android:inputType="numberDecimal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/amount" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/total_cost"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/price" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_save"
            style="@style/Financulator.Button"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sum">

            <TextView
                style="@style/Financulator.ButtonText"
                android:text="@string/save" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>