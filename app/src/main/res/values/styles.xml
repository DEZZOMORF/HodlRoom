<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Financulator" />

    <style name="Financulator.ButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Financulator.MaterialButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="Financulator.RecyclerView">
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Financulator.DefaultVerticalFlow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="flow_wrapMode">chain</item>
        <item name="flow_horizontalBias">0</item>
        <item name="flow_verticalStyle">spread</item>
        <item name="flow_maxElementsWrap">1</item>
    </style>

    <style name="Financulator.CoinListItemInfoVerticalFlow" parent="Financulator.DefaultVerticalFlow">
        <item name="flow_verticalGap">2dp</item>
    </style>

    <style name="Financulator.DefaultTextWithBorder">
        <item name="android:background">@drawable/transparent_bg_with_round_borders</item>

        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Financulator.PurpleTextWithBorder" parent="Financulator.DefaultTextWithBorder">
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:textColor">@color/purple_200</item>
    </style>

</resources>